<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/color_ffffff"
    android:layout_margin="10dp"
    android:background="@drawable/corner_radius_30_background">

    <LinearLayout
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:id="@+id/closeButton"
        >
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/close" />
    </LinearLayout>

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="25dp"
        android:gravity="center"
        android:text="팝업 내용 테스트입니다"
        android:fontFamily="@font/notosanskr_regular"
        style="@style/text_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/titleTextView"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp"
        android:gravity="center_horizontal"
        android:background="@color/white">

        <Button
            android:id="@+id/leftButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="130dp"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:background="@drawable/corner_radius_50_background"
            android:backgroundTint="@color/color_e1e1e1"
            android:text="첫 페이지 가기"
            android:textSize="15sp"
            android:fontFamily="@font/notosanskr_regular"
            style="@style/text_16sp" />

        <Button
            android:id="@+id/rightButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="130dp"
            android:background="@drawable/corner_radius_50_background"
            android:backgroundTint="@color/color_f45b7f"
            android:gravity="center"
            android:text="내 서재 가기"
            android:textSize="15sp"
            android:textColor="@color/color_ffffff"
            android:fontFamily="@font/notosanskr_regular"
            style="@style/text_16sp" />
    </LinearLayout>
</RelativeLayout>